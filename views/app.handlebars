    .tooHigh::after { content: " too high"; }
  </style>
  <header>
    <nav>
      <button class="navButton" id="settingsButton">settings</button>
      <a class="site-title">Rewind.le</a>
      <a class="navButton" id="howToPlayButton">How to Play</a>
